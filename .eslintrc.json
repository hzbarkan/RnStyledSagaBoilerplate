{
  "env": {
    "react-native/react-native": true
  },
  "extends": ["plugin:react/recommended", "plugin:react-native/all", "plugin:prettier/recommended"],
  "globals": {
    "_": true,
    "moment": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "react-native", "better-styled-components", "prettier"],
  "rules": {
    "react-native/no-inline-styles": 0,
    "react-native/no-raw-text": 0,
    "react-native/split-platform-components": 0,
    "react-native/no-color-literals": 2,
    "react-native/sort-styles": ["error", "asc", { "ignoreClassNames": false, "ignoreStyleProperties": false }],
    "react/prop-types": [2, { "ignore": ["navigation", "route"] }],
    "better-styled-components/sort-declarations-alphabetically": 2
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
